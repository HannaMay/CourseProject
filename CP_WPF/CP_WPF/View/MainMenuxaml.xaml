<Window x:Class="CP_WPF.View.MainMenuxaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CP_WPF.View"
        mc:Ignorable="d"
        Title="MainMenuxaml"
        Width="950" 
	    Height="650"
	    MinWidth="950" 
	    MinHeight="650" 
	    FontFamily="Modern №20"
	    FontSize="16"
        WindowStyle="None"
        AllowsTransparency="true"
        AllowDrop="True"
        Icon="../Resources/Image/IconFox.png">

    <Grid x:Name="MainSheets" Background="#FF0D302E">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.07*" />
            <RowDefinition Height="0.11*"/>
            <RowDefinition Height="0.11*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <StackPanel  HorizontalAlignment="Right"  Orientation="Horizontal" Grid.ColumnSpan="2">
            <Border  Margin="3" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button x:Name="ButtonMinimaze" Click="ButtonMinimaze_Click" Width="15" Height="15"  VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5" 
                    Background="Transparent" FontFamily="Modern No. 20" BorderThickness="0" Foreground="White" FontSize="16" Cursor="Hand" ToolTip="Minimaze">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="/Resources/Image/MinimazeWhite.png" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </Border>
            <Border  Margin="3" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Button x:Name="ButtonMultiTab" Click="ButtonMultiTab_Click" Width="15" Height="15"  VerticalAlignment="Top" HorizontalAlignment="Right" 
                    Background="Transparent" BorderThickness="0" Margin="5" Foreground="White" FontSize="16" Cursor="Hand" ToolTip="Minimaze">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="/Resources/Image/MultiTabWhite.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </Border>
            <Border Margin="3" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Button x:Name="ButtonClose" Click="ButtonClose_Click" Width="15" Height="15"  VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5 5 7 5" 
                    Background="Transparent" FontFamily="Modern No. 20" BorderThickness="0" Foreground="White" FontSize="16" Cursor="Hand" ToolTip="Close">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="/Resources/Image/CloseWhite.png" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </Border>
        </StackPanel>

        <StackPanel x:Name="MainNavBtn" Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
            <Border Margin="10" Width="25" Height="25" Background="Transparent">
                <Button x:Name="MainBtnLogIn" Background="Transparent" ToolTip="Log in/Sign up" Click="ButtonLogInOpen_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="/Resources/Image/UserWhite.png"/>
                </Button>
            </Border>
            <Border Cursor="Hand" Margin="0 15 15 15" Width="25" Height="25" Padding="2">
                <Button  x:Name="MainBtnToolbarOpen" Background="Transparent" Click="ButtonMenuOpen_Click" ToolTip="Open menu">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="../Resources/Image/MenuOpenWhite.png"/>
                </Button>
            </Border>
            <Border Cursor="Hand" Width="25" Height="25" Padding="2" Margin="-55 0 0 0">
                <Button x:Name="MainBtnToolbarClose" Background="Transparent" Click="ButtonMenuClose_Click" ToolTip="Close menu"  Visibility="Collapsed">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="/Resources/Image/MenuCloseWhite.png"/>
                </Button>
            </Border>
        </StackPanel>

        <StackPanel x:Name="MainNavFirstPart" Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Panel.ZIndex="1">
            <Border x:Name="MainBtnFilm" Cursor="Hand" Margin="20" VerticalAlignment="Center">
                <Button Background="Transparent" Foreground="White" Content="Film">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
            <Border x:Name="MainBtnConcert" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand" Margin="20">
                <Button Background="Transparent" Foreground="White" Content="Concert"  Padding="15">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
            <Border x:Name="MainBtnExhibition" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand" Margin="20">
                <Button Background="Transparent" Foreground="White" Content="Exhibition"  Padding="15">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
            <Border x:Name="MainBtnQuest" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand" Margin="20">
                <Button Background="Transparent" Foreground="White" Content="Quest"  Padding="15">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
            <Border x:Name="MainBtnOther" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand" Margin="20">
                <Button Background="Transparent" Foreground="White" Content="Other"  Padding="15">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
            <Border x:Name="MainBtnFree" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand" Margin="20">
                <Button Background="Transparent" Foreground="White" Content="Free"  Padding="15">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
            <Border x:Name="MainBtnDropDown" Cursor="Hand" Margin="15 15 0 15" Width="20" Height="20">
                <Button Background="Transparent" ToolTip="Open an additional panel" Click="ButtonPanelOpen_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="/Resources/Image/DropDownWhite.png"/>
                </Button>
            </Border>
        </StackPanel>

        <StackPanel x:Name="MainNavSencondPart" Background="#FF0D302E" Orientation="Horizontal" Grid.Column="1" Panel.ZIndex="2" Grid.Row="2" Visibility="Collapsed">
            <Border x:Name="MainBtnCinema" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand" Margin="20">
                <Button Background="Transparent" Foreground="White" Content="Cinema"  Padding="15">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
            <Border x:Name="MainBtnTheater" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand" Margin="20">
                <Button Background="Transparent" Foreground="White" Content="Theater"  Padding="15">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
            <Border x:Name="MainBtnMuseum" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand" Margin="20">
                <Button Background="Transparent" Foreground="White" Content="Museum"  Padding="15">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
            <Border x:Name="MainBtnDropUp" Cursor="Hand" Margin="15 15 0 15" Width="20" Height="20">
                <Button Background="Transparent" ToolTip="Close an additional panel" Click="ButtonPanelClose_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="/Resources/Image/DropUpWhite.png"/>
                </Button>
            </Border>
        </StackPanel>

        <StackPanel x:Name="ToolbarPanel" Grid.RowSpan="2" Grid.Column="0" Background="#FF0D302E" Orientation="Vertical" Grid.Row="2" Margin="-220,0,220,0">
            <StackPanel Orientation="Horizontal">
                <Border CornerRadius="35" Margin="20 20 5 20" Width="60" Height="60" Background="Transparent" Padding="5">
                    <Ellipse Width="50" Height="50" HorizontalAlignment="Left">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resources/Image/UserWhite.png" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Border>
                <Label Content="Hanna May" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"  FontSize="18" FontWeight="Bold"/>
            </StackPanel>

            <Separator Height="4" Background="White" Margin="15 0 20 0"/>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20 20 0 10 ">
                <Image Source="../Resources/Image/SearchWhite.png" Width="25" Height="25" Margin="5 0 10 0"/>
                <Border x:Name="ToolbarBtnSearch" VerticalAlignment="Center" HorizontalAlignment="Left" Cursor="Hand" Margin="10">
                    <Button Background="Transparent" Foreground="White" Content="Search"  Padding="15" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <ContentPresenter Content="{TemplateBinding Content}"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20 0 0 10 ">
                <Image Source="../Resources/Image/StarWhite.png" Width="25" Height="25" Margin="5 0 10 0"/>
                <Border x:Name="ToolbarBtnFavorite" VerticalAlignment="Center" HorizontalAlignment="Left" Cursor="Hand" Margin="10">
                    <Button Background="Transparent" Foreground="White" Content="Favorite"  Padding="15" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" >
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <ContentPresenter Content="{TemplateBinding Content}"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20 0 0 10 ">
                <Image Source="../Resources/Image/CommentWhite.png" Width="25" Height="25" Margin="5 0 10 0"/>
                <Border x:Name="ToolbarBtnComment" VerticalAlignment="Center" HorizontalAlignment="Left" Cursor="Hand" Margin="10">
                    <Button Background="Transparent" Foreground="White" Content="Comments"  Padding="15" FontSize="16" >
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <ContentPresenter Content="{TemplateBinding Content}"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20 0 0 10 ">
                <Image Source="../Resources/Image/ReviewWhite.png" Width="25" Height="25" Margin="5 0 10 0"/>
                <Border x:Name="ToolbarBtnReview" VerticalAlignment="Center" HorizontalAlignment="Left" Cursor="Hand" Margin="10">
                    <Button Background="Transparent" Foreground="White" Content="Reviews"  Padding="15" FontSize="16" >
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <ContentPresenter Content="{TemplateBinding Content}"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Left" Margin="20 0 0 10 ">
                <Image Source="../Resources/Image/SettingsWhite.png" Width="25" Height="25" Margin="5 0 10 0"/>
                <Border x:Name="ToolbarBtnSetting" VerticalAlignment="Center" HorizontalAlignment="Left" Cursor="Hand" Margin="10">
                    <Button Background="Transparent" Foreground="White" Content="Settings"  Padding="15" FontSize="16" VerticalAlignment="Bottom" >
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <ContentPresenter Content="{TemplateBinding Content}"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>
            </StackPanel>
        </StackPanel>

        <Grid x:Name="GridSpaceInfo" Grid.Row="2" Background="White" Grid.RowSpan="2" Grid.ColumnSpan="2" ScrollViewer.VerticalScrollBarVisibility="Auto" />
    </Grid>
</Window>
